{
  "include": ["src"],
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "target": "es2018",
    "sourceMap": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
